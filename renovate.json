{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranches": ["master"],
  "platform": "github",
  "prHourlyLimit": 0,
  "separateMultipleMajor": true,
  "enabledManagers": ["gradle"],
  "packageRules": [
    {
      "groupName": "androidx dependencies",
      "matchPackagePatterns": [
        "androidx.*"
      ]
    }
  ]

}
